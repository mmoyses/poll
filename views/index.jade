            div.input-group-addon
              button(ng-click='subtractAfter2()')
                span.glyphicon.glyphicon-minus(aria-hidden='true')
            input.form-control(name='after2', ng-model='after2', ng-change='afterChanged(2)')
            div.input-group-addon
              button(ng-click='addAfter2()')
                span.glyphicon.glyphicon-plus(aria-hidden='true')
